<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1.5dp"
        app:strokeColor="#9905EF0D"
        android:backgroundTint="#3305EF0D">
<!--        app:strokeColor="#80FF1E0E"
        android:backgroundTint="#26FF1E0E"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="2dp"
                android:layout_marginVertical="2dp">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textSize="16sp"
                    tools:text="Date"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_time_from"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:textColor="#B82C00"
                    android:textSize="15sp"
                    tools:text="Time from"
                    android:layout_weight="1"/>
<!--1C7C20-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="latitude"
                    android:layout_weight="1"
                    android:textColor="#555454"
                    android:gravity="end"
                    android:layout_marginEnd="1dp"/>

                <TextView
                    android:id="@+id/tv_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="longitude"
                    android:layout_weight="1"
                    android:textColor="#555454"
                    android:gravity="start"
                    android:layout_marginStart="1dp"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
</layout>