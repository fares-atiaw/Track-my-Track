<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.trackmytrack.ui.MainViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="top"
            android:orientation="vertical"
            tools:context=".ui.PrimerFragment">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="8dp"
                app:cardElevation="10dp"
                app:strokeColor="#463700B3"
                app:strokeWidth="2.5dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_definition"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="ðŸ’¬ Note" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="@string/permissions_note"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="ðŸ“Œ Permissions" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foreground Permission >"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_foreground"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="8dp"
                    android:text="Enable"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#950505"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Background Permission >"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_background"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="8dp"
                    android:text="Enable"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#950505"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_start_stop"
                android:background="@drawable/round_style"
                android:backgroundTint="#009688"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="32dp"
                android:padding="10dp"
                android:text="Start Track"
                android:textSize="26sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:letterSpacing="0.05"
                android:enabled="false" />

        </LinearLayout>
    </ScrollView>

</layout>